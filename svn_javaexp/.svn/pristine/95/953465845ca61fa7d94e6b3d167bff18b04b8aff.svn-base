<script type="text/javascript">
	// 1. js 변수 선언 : type의 선언부터 처리가 되지 않는다.
	//    할당하는 순간 type이 설정된다.
	// 2. js 데이터 유형의 종류..
	//     숫자, 문자열형, boolean형, 함수형, 객체형
	//var num01 = 25;
	// 	1) 출력1
	//document.write("출력:"+num01);
	//document.write("<h2>출력:"+num01+"</h2>");
	/*
	var msg = prompt("인사말을 입력하세요!!","여기에");
	document.write("<h3>출력할 인사말:"+msg+"</h3>");
	*/
	// ex1) 과일명을 입력하고, 해당 과일을 출력하세요.
	var fname = prompt("과일명 입력","");
	document.write("<h3>과일명:"+fname+"</h3>");
	// ex2) 학생이름, 국어, 영어, 수학 점수를 입력하여, 화면에
	//      평균까지 출력하세요. 1조
	//  parseInt() :정수숫자형 변환 Number()
	//    함수1(함수2()) 
	
	var name = prompt("학생명","");	
	// 국어점수를 입력받아(문자열), 숫자로 변환 처리..
	var kor = parseInt(prompt("국어점수","0"));	
	var eng = parseInt(prompt("영어점수","0"));	
	var math = parseInt(prompt("수학점수","0"));
	/*
	# js에서 자동형변환 처리.
	1) + : 문자열 연결이 우선순위이기 때문에 
		'1'+'23' ==> '123'
		Number('1') +Number('23') ==> 24
		parseInt('1') +parseInt('23') ==> 24
	   나머지는 다 자동형변환 되어 연산 처리해준다.
	    '23' - '3' ==> 20
	    "5" * "6" ==> 30
	    "4" / "2"  ==> 2 
	2) 함수로 연산 처리 
		eval("25 + 5") ==> 30
	    
	*/
	
	
	var avg = (kor+eng+math)/3;
	document.write("<h3>이름:"+fname+"</h3>");
	document.write("<h3>국어점수:"+kor+"</h3>");
	document.write("<h3>영어점수:"+eng+"</h3>");
	document.write("<h3>수학점수:"+math+"</h3>");
	document.write("<h3>평균점수:"+avg+"</h3>");

	
	
	
	
</script>
</html>