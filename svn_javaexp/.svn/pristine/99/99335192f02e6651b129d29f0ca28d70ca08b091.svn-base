<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>
	// 중복함수
	function ckDupl(){
		//alert("함수 호출");
		//  입력된 id 확인.
		var idVal = document.querySelector("[name=id]").value;
		//alert("입력한 id의 값:"+idVal);
		// 글자수에 대한 check
		// idVal.length : 글자수 확인..
		/*
		var len = idVal.length;
		if(len>=8 && len<=16){
			// 유효
		}else{
			alert("아이디는 8~16사이 입니다.!")
		}
		
		*/
		
		
		if(idVal!=""){
			// 임의로 DB에 himan있다고 가능할 때..	
			if(idVal == "himan"){
				alert("등록된 아이디가 있습니다.")
			}else{
				alert("해당 아이디는 등록가능합니다.");
			}
		}else{
			alert("아이디를 입력하세요.");			
		}
	}
	
	function ckPass(){
		// 입력한 값을 확인..
		var passVal = document.querySelector("[name=pass]").value;
		var passfrmVal = document.querySelector("[name=passfrm]").value;
		if( passVal != ""){
			if( passVal == passfrmVal ){
				alert("동일한 pass 입력입니다!");
			}else{
				alert("패드워드와 패드워드확인이 동일하지 않습니다!");
			}
		}else{
			alert("데이터를 입력하세요..")
		}
	}
	function emailCk(obj){
		//alert("이메일 선택"+obj.value);
		// 1. 첫번째 email1내용
		var email1Value = document.querySelector("[name=email1]").value;
		// 2. 두번째 email2내용
		var email2Obj = document.querySelector("[name=email2]");
		// 	   선택한 메일 서버주소를 email2의 value값에 할당.
		if(obj.value!="직접입력")
			email2Obj.value = obj.value;
		// 3. 선택한 메일
		//    span인 form하위의 요소객체가 아니라 출력내용은 innerText를 활용한다.
		//    그래서, 위에 입력하고 선택한 최종 메일주소를 해당 내용으로 출력한다.
		document.querySelector("#showMail").innerText
			=email1Value+"@"+email2Obj.value;
	}
	function callAddress(){
		var win=window.open("","","width=300,height=300");
		win.moveTo(400,400);
		win.document.write("<h3>주소선택</h3>");
	}
</script>
</head>
<body>
    <h1 align="center">회원가입</h1>
    <form><!--  form으로 전체 내용을 감싸면 하위에 있는 모든 요소객체의 입력값을 전송할 수 있다. -->
    	<!-- width : 전체 화면에서 해당 테이블의 비율을 설정 할 수 있다. -->
    	<table width="100%" border>
    		<!-- 두개의 열을 확보한 상황에서 
    			th(table header) 부분에 대하여 넓이를 30%확보 처리(테이블 전체에서 30%를 의미한다) -->
    		<tr><th width="30%">아이디</th>
    			<td>
    				<input type="text" name="id"/>
    				<input type="button" onclick="ckDupl()" value="중복확인"/>
    				<!-- 서버에 있는 데이터에 id가 있는지 여부를 확인할 때, 쓰인다 -->
    			</td>
    		</tr>
    		<!-- 
    		ex) 이전에 입력한 비밀번호와 비밀번호 확인 내용이 동일한지 여부를 확인
    			function ckPass(){
    				name=pass와 name=passfrm의 값을 비교하여 동일여부를 조건
    				으로 나타낸다.
    				var passVal = document.querySelector("[name=pass]");
    			}  1조, 2조  ~15:25 
    		 -->
    		<tr><th>비밀번호</th>
    			<td>
    				<input type="password" name="pass"/>
    			</td>
    		</tr>    	
    		<tr><th>비밀번호 확인</th>
    			<td>
    				<input type="password" name="passfrm"/>
    				<input type="button"
    					onclick="ckPass()" value="동일여부확인"/>
    			</td>
    		</tr> 
     		<tr><th>성명</th>
    			<td>
    				<input type="text" name="name"/>
    			</td>
    		</tr>     	
     		<tr><th>성별</th>
     			<!-- 
     			radio의 경우 default로 checked으로 처리가능하다.
     			 -->
    			<td>
    				<input type="radio" name="gender" value="남자"/>남자
    				<input type="radio" name="gender" value="여자" checked />여자
    			</td>
    		</tr>    
     		<tr><th>이메일</th>
    			<td>
    				<input type="text" name="email1"/>@
    				<input type="text" name="email2"/>
    				<!-- 
    				select를 변경했을 때, 호출할 함수 지정.
    				onchange="함수()"
    				함수(this) : 이벤트가 처리된 객체자체를 함수의 매개변수로
    					전달한다.
    				 -->
    				<select onchange="emailCk(this)">
    					<option>직접입력</option>
    					<option>naver.com</option>
    					<option>daum.net</option>
    					<option>gmail.com</option>
    				</select>
    				<span id="showMail"></span>
    			</td>
    		</tr>  
    		
    		 
    		<tr><th >주소</th>
    			<td>
    				<input type="text" name="address"/>
    				<input type="button" value="주소찾기" 
    					onclick="callAddress()"/>
    			</td>
    		</tr>    
       		<tr><th >상세주소</th>
    			<td>
    				<input type="text" name="detail_addr"/>
    			</td>
    		</tr>   
     		<tr><th>휴대폰</th>
    			<td>
      				<input type="radio" name="phone" value="SK"/>SK
    				<input type="radio" name="phone" value="KT"/>KT
    				<input type="radio" name="phone" value="LGU"/>LGU+<br>
    				<select name="phone1">
    					<option>010</option>
    					<option>070</option>
    					<option>011</option>
    				</select>    			
    				<input type="text" name="phone2"/>-
    				<input type="text" name="phone3"/>

    			</td>
    		</tr>   
     		<tr><th>관심</th>
    			<td>
      				<input type="checkbox" name="favCar" value="수입차"/>수입차
      				<input type="checkbox" name="favCar" value="국산차"/>국산차
      				<input type="checkbox" name="favCar" value="SUV"/>경차
      				<input type="checkbox" name="favCar" value="경차"/>경차
      				<input type="checkbox" name="favCar" value="LPG"/>LPG
    			</td>
    		</tr>    
        	<tr><th >자기소개</th>
    			<td>
    				<textarea cols="50" rows="5"></textarea>
    			</td>
    		</tr>     		
         	<tr><td colspan="2" style="text-align:center;">
    				<input type="submit" value="가입하기"/>
    				<input type="reset" value="다시입력"/>
    			</td>
    		</tr>      		   		  		  						   		    			     			
    	</table>
    </form> 
</body>
<script>

</script>
</html>