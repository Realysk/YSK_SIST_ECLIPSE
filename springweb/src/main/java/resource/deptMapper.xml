<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >	

<mapper namespace="springweb.a05_mvc.a03_dao.A03_DeptDao">
	<select id="dlist" parameterType="dept" resultType="dept" >
		SELECT * FROM dept02 WHERE 1=1
		<if test = "dname !=null and dname !=''">
		AND dname LIKE '%'|| #{dname} ||'%'
		</if>
		AND loc LIKE '%'|| #{loc} ||'%'
		OREDR BY deptno DESC
	</select>
	<insert id="insertDept" parameterType="dept">
		INSERT INTO dept02 VALUES (#{deptno}, #{dname}, #{loc})	
	</insert>
	<update id="updateDept" parameterType="dept">
		UPDATE dept02
			SET dname = #{dname},
				loc = #{loc}
			WHERE deptno = #{deptno}		
	</update>
	<delete id="deleteDept" parameterType="int">
		DELETE FROM dept02 WHERE deptno = #{deptno}	
	</delete>
</mapper>	